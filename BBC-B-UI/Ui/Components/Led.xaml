<UserControl x:Class=" MLDComputing.Emulators.BeebBox.Ui.Components.Led"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="20" Height="20">
    <Grid>
        <Ellipse x:Name="LedInd"
                 Fill="Gray"
                 Stroke="Black"
                 StrokeThickness="1"
                 Width="20" Height="20">
            <Ellipse.Style>
                <Style TargetType="Ellipse">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsOn, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Fill" Value="LimeGreen"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsOn, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                            <Setter Property="Fill" Value="Gray"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Ellipse.Style>
        </Ellipse>
    </Grid>
</UserControl>